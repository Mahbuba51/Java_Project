<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e7dc76;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RestaurantDatabase.Controller">
   <children>
      <Label layoutX="140.0" layoutY="29.0" text="Order Food Without Any Hassle!" textAlignment="CENTER">
         <effect>
            <Glow />
         </effect>
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <Button fx:id="searchRestaurant" layoutX="202.0" layoutY="105.0" mnemonicParsing="false" onAction="#SearchRestaurant" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: black;" text="Search Restaurant" textFill="#dbedff">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="searchFood" layoutX="202.0" layoutY="186.0" mnemonicParsing="false" onAction="#searchFood" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: black;" text="Search Food Items" textFill="#dbedff">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="exit" layoutX="283.0" layoutY="312.0" mnemonicParsing="false" onAction="#exitSystem" style="-fx-background-color: black;" text="Exit" textFill="#dbedff">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
